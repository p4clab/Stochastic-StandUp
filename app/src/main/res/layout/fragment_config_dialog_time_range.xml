<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="item"
            type="kaist.iclab.standup.smi.ui.config.LocalTimeRangeConfigItem" />

        <import type="android.text.format.DateUtils"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_medium"
            android:paddingBottom="@dimen/space_vertical_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txt_time_config_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_horizontal_default"
            android:paddingTop="@dimen/space_vertical_default"
            android:paddingBottom="@dimen/space_vertical_default"
            android:textColor="@color/grey"
            android:textSize="@dimen/txt_size_default"
            android:gravity="center"
            android:background="@drawable/bg_selectable_text_view"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/txt_time_config_to"/>

        <TextView
            android:id="@+id/txt_time_config_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_horizontal_default"
            android:paddingTop="@dimen/space_vertical_default"
            android:paddingBottom="@dimen/space_vertical_default"
            android:textColor="@color/grey"
            android:textSize="@dimen/txt_size_default"
            android:gravity="center"
            android:background="@drawable/bg_selectable_text_view"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_time_config_from"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
