<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="kaist.iclab.standup.smi.ui.splash.SplashViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/img_launcher"
            android:layout_width="@dimen/img_size_launcher"
            android:layout_height="@dimen/img_size_launcher"
            android:src="@mipmap/ic_launcher_none"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textSize="@dimen/txt_size_launcher"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

    </LinearLayout>

</layout>